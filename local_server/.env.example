# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-minimum-50-characters-long
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
ENVIRONMENT=production

# Database
LOCAL_DB_NAME=dineswift_local
LOCAL_DB_USER=dineswift_user
LOCAL_DB_PASSWORD=secure_password_here
LOCAL_DB_HOST=postgres
LOCAL_DB_PORT=5432

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key
SUPABASE_JWT_SECRET=your-jwt-secret

# Redis
REDIS_URL=redis://redis:6379/0

# Security
FIELD_ENCRYPTION_KEY=your-32-byte-encryption-key-base64
SESSION_COOKIE_AGE=86400

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Monitoring
SENTRY_DSN=
ENABLE_METRICS=True

# Sync Configuration
SYNC_BATCH_SIZE=50
SYNC_RETRY_DELAY=60
SYNC_MAX_RETRIES=5